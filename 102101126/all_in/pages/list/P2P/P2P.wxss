/* pages/index/index.wxss */
page {
    height: 100%;
}

.background {
    width: 100%;
    height: 100%;
    position: fixed;
    background-size: 100% 100%;
    z-index: -2;
}

.back {
    position: fixed;
    z-index: 2;
    width: 135rpx;
    height: 100rpx;
    margin-top: 50rpx;
    margin-left: 20rpx;
}

.main {
    height: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}
.block {
    height: 50rpx;

}
.up {
    height: 500rpx;
    width: 450rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    transform: rotate(-180deg);
}

.down {
    height: 500rpx;
    width: 450rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    
}
.button {
    height: 50prx;
    width: 100%;
    display: flex;
    flex-direction: row;
}
.lock {
    height: 50rpx;
    width: 100rpx;
    display: flex;
    flex-direction: row;
    border: 1rpx black solid;
    border-radius: 10rpx ;
    justify-content: space-around;
    margin-right: 100rpx;
    margin-left: 100rpx;
}
.menu {
    height: 50rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.row_2 {
    height: 150rpx;
    width: 450rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.row_3 {
    height: 150rpx;
    width: 450rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}



.item {
    width: 150rpx;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.item image {
    width: 100rpx;
    height: 100rpx;
    opacity: 0.8;
}

